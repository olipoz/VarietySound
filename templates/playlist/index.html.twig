{% extends 'base.html.twig' %}

{% block title %}Play Liste {{ app.user.username }} {% endblock %}

{% block body %}


<div class="container text-center col-12 col-md-6 pt-5">
    <h1 class="p-5">Ma Play Liste</h1>
</div>

<div class="container">
    <div class="row">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Artiste</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% if app.user %}
            {% for m in playlist %}
                <tr>
                    <td>{{ m.titre }}</td>
                    <td>{{ m.artiste.nom }}</td>
                    <td><a class="btn btn-sm btn-danger" href="{{path('supprimePlaylist', { 'id' : m.id })}}">Supprimer</a></td>
                </tr>
            {% endfor %}
            {% endif %}
            </tbody>
        </table>

        <a class="rosepale btn btn-sm btn-secondary col-3" href="{{path('music.index')}}">Retour Ã  la liste des musiques</a>

    </div>
</div>









{% endblock %}

