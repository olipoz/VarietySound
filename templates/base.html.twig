<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}VARIETYSOUND{% endblock %}</title>

    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <link href="{{ asset('css/styles.css') }}" rel="stylesheet" />
    {% endblock %}
</head>

<body class="bg-gray rosepale">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">VARIETY SOUND</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link {% if menu_actif is defined and menu_actif == 'music' %}active {% endif %}"
                            href="{{ path('music.index') }}">Les musiques</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('album') }}">Albums</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('artiste') }}">Artistes</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="">Recherche</a>
                    </li>

                    <li class="nav-item">
                        {% if app.user %}
                        <a class="nav-link" href="{{ path('playlist')}}">Playlist</a>
                        {% endif %}
                    </li>

                    <li class="nav-item">
                        {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{ path('admin') }}">Adminstration</a>
                        {% endif %}
                    </li>
                </ul>

                {% if app.user %}
                <div>
                    Bonjour {{ app.user.username }} <a class="btn btn-sm btn-danger"
                        href="{{ path('app_logout') }}">DÃ©connexion</a>
                </div>
                {% else %}
                <div>
                    <a class="btn btn-sm btn-secondary" href="{{ path('utilisateur_new') }}">S'inscrire</a>
                    <a class="btn btn-sm btn-secondary" href="{{ path('app_login') }}">Se connecter</a>
                </div>
                {% endif %}
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        {% if message is defined %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
        {% endif %}
    </div>

    {% block body %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}

    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.slim.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"></script>
</body>

</html>


